---------------------------------------
             EJERCICIO 1
--------------------------------------

x1 = input("ingrese el limite inferior");
x2 = input("ingrese el limite superior");
funcion = @(x)(1/sqrt(2*pi))*(exp(-(x^2)/2));
dif_x = (x2-x1)/10000;
y=0;
for i=1:1:10000
   punto = x1+dif_x*(i-1);
   y=y+funcion(punto);
end
area = dif_x*y;
fprintf("Area que encierra el intervalo [%d,%d] : %5.2f",x1,x2,area);
